<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.spartaneats.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
	<servlet-name>IndexServlet</servlet-name>
	<servlet-class>edu.ycp.cs320.spartaneats.servlet.IndexServlet</servlet-class>
  </servlet>
  <servlet>
	<servlet-name>AddItemsServlet</servlet-name>
	<servlet-class>edu.ycp.cs320.spartaneats.servlet.AddItemsServlet</servlet-class>
  </servlet>
    <servlet>
	<servlet-name>AddCondimentsServlet</servlet-name>
	<servlet-class>edu.ycp.cs320.spartaneats.servlet.AddCondimentsServlet</servlet-class>
  </servlet>
  <servlet>
	<servlet-name>AdminServlet</servlet-name>
	<servlet-class>edu.ycp.cs320.spartaneats.servlet.AdminServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SetDeliveryMethod</servlet-name>
  	<servlet-class>edu.ycp.cs320.spartaneats.servlet.SetDeliveryMethod</servlet-class>
  </servlet>
  <servlet>
	<servlet-name>PreferencesServlet</servlet-name>
	<servlet-class>edu.ycp.cs320.spartaneats.servlet.CreateOrderServlet</servlet-class>
  </servlet>
   <servlet>
	<servlet-name>ProfilesServlet</servlet-name>
	<servlet-class>edu.ycp.cs320.spartaneats.servlet.ProfilesServlet</servlet-class>
  </servlet>
  <servlet>
	<servlet-name>CreateOrderServlet</servlet-name>
	<servlet-class>edu.ycp.cs320.spartaneats.servlet.CreateOrderServlet</servlet-class>
  </servlet>
  <servlet>
	<servlet-name>ViewOrderServlet</servlet-name>
	<servlet-class>edu.ycp.cs320.spartaneats.servlet.ViewOrderServlet</servlet-class>
  </servlet>
  <servlet>
	<servlet-name>ViewOrderAdminServlet</servlet-name>
	<servlet-class>edu.ycp.cs320.spartaneats.servlet.ViewOrderAdminServlet</servlet-class>
  </servlet>
  <servlet>
	<servlet-name>SavedOrdersServlet</servlet-name>	
	<servlet-class>edu.ycp.cs320.spartaneats.servlet.SavedOrdersServlet</servlet-class>	
  </servlet>


  <!-- Servlet mappings -->
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>IndexServlet</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddItemsServlet</servlet-name>
    <url-pattern>/additems</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
    <servlet-name>AddCondimentsServlet</servlet-name>
    <url-pattern>/addcondiments</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SetDeliveryMethod</servlet-name>
    <url-pattern>/setdeliverymethod</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>PreferencesServlet</servlet-name>
    <url-pattern>/preferences</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
    <servlet-name>ProfilesServlet</servlet-name>
    <url-pattern>/profiles</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CreateOrderServlet</servlet-name>
    <url-pattern>/createorder</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ViewOrderServlet</servlet-name>
    <url-pattern>/vieworder</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ViewOrderAdminServlet</servlet-name>
    <url-pattern>/vieworderadmin</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdminServlet</servlet-name>
    <url-pattern>/admin</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SavedOrdersServlet</servlet-name>
    <url-pattern>/savedorders</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
